@page
@model SportHub.Pages.AdminPageModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin page";
}

<div class="admin-configuration-block">
    <div class="main-articles_block" id="main-articles-block">
        <div class="section-caption-block">
            <div class="caption-line"></div>
            <div class="caption-block">
                <p>MAIN ARTICLES</p>
            </div>
            <div class="caption-line"></div>
        </div>
        <div class="configuration-body">
            <div class="team-category-option-block">
                <div class="select-box">
                    <label for="main-a-categories">CATEGORY</label>
                    <select name="main-a-categories" id="tempid"></select>
                </div>
                <div class="select-box">
                    <label for="main-a-subcategories">SUBCATEGORY</label>
                    <select name="main-a-subcategories"></select>
                </div>
                <div class="select-box">
                    <label for="main-a-teams">TEAM</label>
                    <select name="main-a-teams"></select>
                </div>
            </div>
            <div class="article-option-block">
                <div class="select-box">
                    <label for="main-a-articles">ARTICLE</label>
                    <select name="main-a-articles"></select>
                </div>
            </div>
            <div class="action-buttons-block">
                <div class="delete-add-buttons-block">
                    <p class="delete-button disabled">Delete</p>
                    <p class="add-new-button">+ Add one more article</p>
                </div>
                <div class="show-hide-selector-box">
                    <p>Show on the main page</p>
                    <label class="switch">
                        <input type="checkbox" checked>
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>