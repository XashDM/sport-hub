            <div class="main-column"> 
                <div class="main-article">
                    <div class="main-section-crop">
                        <div class="newstag" id="main-article-team-tag"><p>@(Model.teams[0])</p></div>
                        <img src="@(Model.articles[0].ImageLink)" class="main-article-photo" alt="Main article" />
                    </div>
                    <div class="main-section-banner">
                        <div class="image-info">
                            <div class="main-published lable">
                                <b id="banner-published-date">
                                    Published / @(Model.articles[0].PostedDate)
                                </b>
                            </div>
                            <div class="main-title-info">
                                <b id="banner-title">
                                    @(Model.articles[0].Title)
                                </b>
                            </div>
                            <div class="main-bottom-info h3-heading-text">
                                @(Model.articles[0].ContentText)
                            </div>
                        </div>
                        <div class="banner-nav-box">
                            <div class="button-box">
                                <img id="left-button" class="red-hover" onclick="prevImage()" src="~/icons/arrow-left.png" />
                                @for (var i = 0; i < Model.articles.Count; i++)
                                {
                                    <p id="@($"num-{i}")" >@($"0{i+1}")</p>
                                }
                                <img id="right-button" class="red-hover" onclick="nextImage()" src="~/icons/arrow-right.png" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="medium-news-container">
                    <ul>
                        @for (var i = 0; i < Model.articles.Count; i++)
                         {
                         <li>
                             <a href="@($"Articles/Details?id={Model.articles[i].Id}")">
                                 <div id="@($"main-section-news-{i}")" class="medium-news-box box-shadow">
                                     <div class="medium-crop">
                                         <img class="medium-news-img" src="@(Model.articles[i].ImageLink)" alt="Medium image" />
                                     </div>
                                     <h3 class="h3-heading-text">@(Model.articles[i].Title)</h3>
                                     <p class="caption">@(Model.articles[i].ContentText.Substring(0, 45) + "...")</p>
                                     <img class="floating-icon" src="/icons/rightarrow.png" />
                                 </div>
                             </a>
                         </li>
                         }
                        
                    </ul>
                </div>
